                                                    <TextBlock FontWeight="Bold" 
                                                               Text="NOTE:"/>
                                                    If this one doesn't work, try FIFO Relaxed present mode
                                                    <LineBreak/>
                                                    <TextBlock FontWeight="SemiBold" 
                                                               Text="Options:"
                                                               TextDecorations="Underline"/>
                                                    <LineBreak/>
                                                    <TextBlock Padding="10,0,0,0" 
