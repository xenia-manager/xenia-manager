<ui:FluentWindow x:Class="XeniaManager.Desktop.Views.Windows.ProfileEditorWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:XeniaManager.Desktop.Views.Windows"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="Xenia Manager - Profile Editor"
                 Width="400"
                 Height="250"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">
    <Window.Resources>
        <!--  Header Text Style  -->
        <Style x:Key="HeaderTextStyle"
               BasedOn="{StaticResource {x:Type TextBlock}}"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        </Style>

        <!--  Description Text Style  -->
        <Style x:Key="DescriptionTextStyle"
               BasedOn="{StaticResource {x:Type TextBlock}}"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Titlebar  -->
        <ui:TitleBar Grid.Row="0"
                     ShowMaximize="False"
                     ShowMinimize="False" />

        <StackPanel Grid.Row="1">
            <!--  Header Section  -->
            <StackPanel Margin="0,0,0,15">
                <ui:SymbolIcon HorizontalAlignment="Center"
                               FontSize="32"
                               Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                               Symbol="ContactCard24" />
                <TextBlock Margin="0,10,0,0"
                           Style="{StaticResource HeaderTextStyle}"
                           Text="{DynamicResource ProfileEditor_ChangeGamertag}" />
                <TextBlock Style="{StaticResource DescriptionTextStyle}" Text="{DynamicResource ProfileEditor_ChangeGamertagTooltip}" />
            </StackPanel>

            <!--  Gamertag Input  -->
            <StackPanel Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <ui:TextBox MinWidth="200"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            MaxLength="15"
                            Text="{Binding ProfileGamertag, UpdateSourceTrigger=PropertyChanged}" />
                <ui:Button Click="BtnSave_Click"
                           FontSize="22"
                           IsEnabled="{Binding IsValid}">
                    <ui:Button.Content>
                        <ui:SymbolIcon Symbol="Save24" />
                    </ui:Button.Content>
                </ui:Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
