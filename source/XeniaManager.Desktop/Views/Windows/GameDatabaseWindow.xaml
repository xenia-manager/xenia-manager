<ui:FluentWindow x:Class="XeniaManager.Desktop.Views.Windows.GameDatabaseWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="Xenia Manager - Game Database"
                 Width="418"
                 Height="640"
                 MinWidth="500"
                 MinHeight="500"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterOwner"
                 mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  Titlebar  -->
        <ui:TitleBar x:Name="TbTitle"
                     Title="Games Database"
                     Grid.Row="0"
                     FontSize="16"
                     ShowMaximize="False"
                     ShowMinimize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon x:Name="TbTitleIcon" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!--  Searchbar  -->
        <ui:TextBox x:Name="TxtSearchBar"
                    Grid.Row="1"
                    Padding="10,0,0,0"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="24"
                    TextChanged="TxtSearchBar_TextChanged"
                    TextWrapping="WrapWithOverflow" />

        <!--  Separation line  -->
        <Separator Grid.Row="2" Margin="0,8" />

        <!--  Games List  -->
        <ListBox x:Name="LstGamesDatabase"
                 Grid.Row="3"
                 SelectionChanged="LstGamesDatabase_OnSelectionChanged" />

    </Grid>
</ui:FluentWindow>