<Page x:Class="XeniaManager.Desktop.Views.Pages.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPage"
      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
      ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <Page.Resources>
        <Style x:Key="FlatMenuItemStyle" TargetType="MenuItem">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <ContentPresenter ContentSource="Header" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Searchbar, sort, show game name, add game-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--Searchbar-->
            <ui:TextBox x:Name="TxtSearchBar"
                        Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="24"
                        HorizontalAlignment="Stretch"
                        Margin="5"
                        Padding="10,0,0,0"
                        VerticalContentAlignment="Center"
                        PlaceholderText="{DynamicResource Searchbar_PlaceholderText}"
                        TextChanged="TxtSearchBar_OnTextChanged" />
            <Menu Grid.Column="1"
                  Margin="0,0,5,0">

                <!-- Grid/Listview Library -->
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnLibraryView"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center"
                                Click="BtnLibraryView_Click">
                            <ui:SymbolIcon Symbol="Grid24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>

                <!--Display/Hide Options-->
                <ui:MenuItem Cursor="Hand"
                             FontSize="28"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                             Icon="{ui:SymbolIcon Eye24}"
                             VerticalAlignment="Center">
                    <!--Game Title-->
                    <MenuItem x:Name="MniGameTitle"
                              IsCheckable="True"
                              Header="{DynamicResource LibraryMenuItemShow_GameTitle}"
                              Click="MniGameTitle_Click" />

                    <!--Compatibility Rating-->
                    <MenuItem x:Name="MniCompatibilityRating"
                              IsCheckable="True"
                              Header="{DynamicResource LibraryMenuItemShow_CompatibilityRating}"
                              Click="MniCompatibilityRating_Click" />
                </ui:MenuItem>

                <!--Scan Directory Button-->
                <ui:MenuItem x:Name="BtnScanDirectory"
                             Cursor="Hand"
                             FontSize="28"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                             Icon="{ui:SymbolIcon Folder24}"
                             VerticalAlignment="Center"
                             Click="BtnScanDirectory_Click" />

                <!-- Button for adding games -->
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnAddGame"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center"
                                Click="BtnAddGame_Click">
                            <ui:SymbolIcon Symbol="Add24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>
        
        <!-- Zoom Slider -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        
            <ui:SymbolIcon Grid.Column="0"
                           Symbol="ZoomOut24" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,0,5,0"/>
        
            <Slider x:Name="SldLibraryZoom" 
                    Grid.Column="1"
                    IsSnapToTickEnabled="True"
                    Minimum="0.5"
                    Maximum="2"
                    TickFrequency="0.1"
                    ValueChanged="SldLibraryZoom_ValueChanged"/>
        
            <ui:SymbolIcon Grid.Column="2" 
                           Symbol="ZoomIn24" 
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="5,0,0,0"/>
        </Grid>
        
        <!--Games-->
        <WrapPanel x:Name="WpGameLibrary"
                   Grid.Row="2"
                   Orientation="Horizontal"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"/>
        <ui:SnackbarPresenter x:Name="SbXeniaUpdateNotification"
                              Grid.Row="2"
                              VerticalAlignment="Bottom" />
    </Grid>
</Page>