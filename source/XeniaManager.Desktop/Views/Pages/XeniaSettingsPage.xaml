<Page x:Class="XeniaManager.Desktop.Views.Pages.XeniaSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:XeniaManager.Desktop.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="XeniaSettingsPage"
      d:DesignHeight="450"
      d:DesignWidth="810"
      Loaded="XeniaSettingsPage_Loaded"
      mc:Ignorable="d">
    <Page.Resources>
        <converters:FrameRateToTextConverter x:Key="FrameRateToTextConverter" />
        <converters:DivideByConverter x:Key="DivideByConverter" />
    </Page.Resources>
    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="CmbConfigurationFiles"
                      Grid.Column="0"
                      MinWidth="500"
                      Margin="10,0"
                      HorizontalAlignment="Stretch"
                      FontSize="16"
                      ItemsSource="{Binding ConfigurationFiles}"
                      SelectionChanged="CmbConfigurationFiles_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Menu Grid.Column="1"
                  Margin="10,0"
                  HorizontalAlignment="Stretch">
                <MenuItem x:Name="MniResetSettings" Style="{StaticResource FlatMenuItem}">
                    <MenuItem.Header>
                        <Button x:Name="BtnResetSettings"
                                VerticalAlignment="Center"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Click="BtnResetSettings_Click"
                                Cursor="Hand"
                                FontSize="24"
                                ToolTip="{DynamicResource XeniaSettingsPage_ResetSettingsButtonTooltip}">
                            <ui:SymbolIcon Symbol="ArrowClockwise24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem x:Name="MniOptmizeSettings" Style="{StaticResource FlatMenuItem}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOptimizeSettings"
                                VerticalAlignment="Center"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Click="BtnOptimizeSettings_OnClick"
                                Cursor="Hand"
                                FontSize="24"
                                ToolTip="{DynamicResource XeniaSettingsPage_OptimizeSettingsButtonTooltip}">
                            <ui:SymbolIcon Symbol="CloudSync24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem x:Name="MniOpenInEditor" Style="{StaticResource FlatMenuItem}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOpenInEditor"
                                VerticalAlignment="Center"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Click="BtnOpenInEditor_OnClick"
                                Cursor="Hand"
                                FontSize="24"
                                ToolTip="{DynamicResource XeniaSettingsPage_OpenInEditorButtonTooltip}">
                            <ui:SymbolIcon Symbol="Pen24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem x:Name="MniSaveSettings" Style="{StaticResource FlatMenuItem}">
                    <MenuItem.Header>
                        <Button x:Name="BtnSaveSettings"
                                VerticalAlignment="Center"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Click="BtnSaveSettings_Click"
                                Cursor="Hand"
                                FontSize="24"
                                ToolTip="{DynamicResource XeniaSettingsPage_SaveSettingsButtonTooltip}">
                            <ui:SymbolIcon Symbol="Save24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>

        <Border Grid.Row="1"
                Height="1"
                Background="{DynamicResource TextFillColorSecondaryBrush}" />

        <Menu Grid.Row="2"
              Margin="5"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnAudioSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="SpeakerEdit24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_AudioSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnDisplaySettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="Desktop24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_DisplaySettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnGraphicalSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="DrawImage24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_GraphicalSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnGeneralSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="Globe24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_GeneralSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnUserInputSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="Cursor24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_UserInputSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnStorageSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="Storage24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_StorageSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}">
                <MenuItem.Header>
                    <Button x:Name="BtnHackSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="Settings24" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_HackSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItem}" Visibility="{Binding MousehookSettingsVisibility}">
                <MenuItem.Header>
                    <Button x:Name="BtnMousehookSettings"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Click="BtnShowSettings_Click"
                            Cursor="Hand"
                            FontSize="36">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <ui:SymbolIcon FontSize="28" Symbol="KeyboardMouse16" />
                            <TextBlock Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       Text="{DynamicResource XeniaSettingsPage_MousehookSettingsTitleText}" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <Border Grid.Row="3" Style="{DynamicResource SeparationLineBorder}" />

        <StackPanel x:Name="SpSettingsPanel" Grid.Row="4">
            <StackPanel x:Name="SpAudioSettings">
                <!--  apu  -->
                <Border x:Name="BrdAudioSystemSetting"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioSystemSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioSystemSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ComboBox x:Name="CmbAudioSystem"
                                  Grid.Column="1"
                                  MinWidth="120"
                                  DisplayMemberPath="Key"
                                  ItemsSource="{Binding AudioSystems}"
                                  SelectedValuePath="Value"
                                  Style="{DynamicResource XeniaSettingComboBox}" />
                    </Grid>
                </Border>

                <!--  apu_max_queued_frames  -->
                <Border x:Name="BrdAudioMaxQueuedFramesSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioMaxQueuedFramesSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioMaxQueuedFramesSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtAudioMaxQueuedFrames"
                                 Grid.Column="1"
                                 Width="130"
                                 Style="{DynamicResource XeniaSettingsTextbox}"
                                 TextChanged="TxtAudioMaxQueuedFrames_TextChanged" />
                    </Grid>
                </Border>

                <!--  mute  -->
                <Border x:Name="BrdAudioMuteSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioMuteSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioMuteSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkAudioMute"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  enable_xmp  -->
                <Border x:Name="BrdEnableXmpSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmpSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioXmpSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXmp"
                                  Grid.Column="1"
                                  Click="ChkXmp_Click"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  xmp_default_volume  -->
                <Border x:Name="BrdXmpVolumeSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmpVolumeSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioXmpVolumeSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Grid Grid.Column="1"
                              Margin="0"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Slider x:Name="SldXmpVolume"
                                    Grid.Row="0"
                                    Width="240"
                                    IsSnapToTickEnabled="True"
                                    Maximum="100"
                                    Minimum="0"
                                    TickFrequency="1"
                                    ValueChanged="SldXmpVolume_ValueChanged" />
                            <TextBlock x:Name="TxtSldXmpVolume"
                                       Grid.Row="1"
                                       Style="{DynamicResource SliderTextBlock}"
                                       Text="0" />
                        </Grid>
                    </Grid>
                </Border>

                <!--  use_dedicated_xma_thread  -->
                <Border x:Name="BrdAudioDedicatedXmaThreadSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioUseDedicatedXmaThreadSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioUseDedicatedXmaThreadSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkDedicatedXmaThread"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  use_new_decoder  -->
                <Border x:Name="BrdAudioXmaDecoderSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmaDecoderSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioXmaDecoderSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXmaAudioDecoder"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel x:Name="SpDisplaySettings">
                <!--  fullscreen  -->
                <Border x:Name="BrdDisplayFullscreenSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayFullscreenSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayFullscreenSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkFullscreen"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  internal_display_resolution  -->
                <Border x:Name="BrdInternalDisplayResolutionSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayInternalResolutionSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayInternalResolutionSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ComboBox x:Name="CmbInternalDisplayResolution"
                                  Grid.Column="1"
                                  ItemsSource="{Binding InternalDisplayResolutions}"
                                  SelectionChanged="CmbInternalDisplayResolution_OnSelectionChanged"
                                  Style="{DynamicResource XeniaSettingComboBox}" />
                    </Grid>
                </Border>

                <!--  internal_display_resolution_x  -->
                <Border x:Name="BrdCustomInternalDisplayResolutionWidthSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionWidthSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionWidthSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtCustomInternalDisplayResolutionWidth"
                                 Grid.Column="1"
                                 Width="130"
                                 Style="{DynamicResource XeniaSettingsTextbox}" />
                    </Grid>
                </Border>

                <!--  internal_display_resolution_y  -->
                <Border x:Name="BrdCustomInternalDisplayResolutionHeightSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionHeightSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionHeightSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtCustomInternalDisplayResolutionHeight"
                                 Grid.Column="1"
                                 Width="130"
                                 Style="{DynamicResource XeniaSettingsTextbox}" />
                    </Grid>
                </Border>

                <!--  present_letterbox  -->
                <Border x:Name="BrdDisplayLetterboxSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayLetterboxSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayLetterboxSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkLetterbox"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  widescreen  -->
                <Border x:Name="BrdDisplayWidescreenSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayWidescreenSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayWidescreenSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkWidescreen"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  vsync  -->
                <Border x:Name="BrdXeniaVerticalSyncSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayVSyncSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayVSyncSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXeniaVSync"
                                  Grid.Column="1"
                                  Style="{DynamicResource XeniaSettingCheckBox}" />
                    </Grid>
                </Border>

                <!--  framerate_limit  -->
                <Border x:Name="BrdXeniaFramerateLimitSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayFramerateLimitSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplayFramerateLimitSettingTooltip}" TextAlignment="Center" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Grid Grid.Column="1"
                              Margin="0"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Slider x:Name="SldXeniaFramerate"
                                    Grid.Row="0"
                                    Width="240"
                                    IsSnapToTickEnabled="True"
                                    Maximum="144"
                                    Minimum="0"
                                    TickFrequency="1" />
                            <TextBlock x:Name="TxtSldXeniaFramerate"
                                       Grid.Row="1"
                                       Style="{DynamicResource SliderTextBlock}"
                                       Text="{Binding Value, ElementName=SldXeniaFramerate, Converter={StaticResource FrameRateToTextConverter}}" />
                        </Grid>
                    </Grid>
                </Border>

                <!--  TODO: NVIDIA/AMD Settings here  -->
                <TextBlock FontSize="28"
                           Style="{DynamicResource SettingTextBlock}"
                           Text="GPU Driver Settings" />
                <StackPanel x:Name="SpNvidiaSettings">
                    <!--  vsync  -->
                    <Border x:Name="BrdNvidiaVerticalSyncSetting"
                            Height="70"
                            MaxWidth="810"
                            Style="{DynamicResource SettingBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Style="{DynamicResource SettingTextBlock}"
                                       Text="{DynamicResource XeniaSettingsPage_NvidiaVSyncSettingText}">
                                <TextBlock.ToolTip>
                                    <TextBlock Text="{DynamicResource XeniaSettingsPage_NvidiaVSyncSettingTooltip}" TextAlignment="Left" />
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <ComboBox x:Name="CmbNvidiaVerticalSync"
                                      Grid.Column="1"
                                      MinWidth="180"
                                      DisplayMemberPath="Key"
                                      ItemsSource="{Binding NvidiaVerticalSync}"
                                      SelectedValuePath="Value"
                                      Style="{DynamicResource XeniaSettingComboBox}" />
                        </Grid>
                    </Border>

                    <!--  framerate_limit  -->
                    <Border x:Name="BrdNvidiaFramerateLimitSetting"
                            Height="70"
                            MaxWidth="810"
                            Style="{DynamicResource SettingBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Style="{DynamicResource SettingTextBlock}"
                                       Text="{DynamicResource XeniaSettingsPage_NvidiaFramerateLimitSettingText}">
                                <TextBlock.ToolTip>
                                    <TextBlock Text="{DynamicResource XeniaSettingsPage_NvidiaFramerateLimitSettingTooltip}" TextAlignment="Center" />
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <Grid Grid.Column="1"
                                  Margin="0"
                                  VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Slider x:Name="SldNvidiaFramerate"
                                        Grid.Row="0"
                                        Width="240"
                                        IsSnapToTickEnabled="True"
                                        Maximum="240"
                                        Minimum="0"
                                        TickFrequency="1"
                                        ValueChanged="SldNvidiaFramerate_OnValueChanged" />
                                <TextBlock x:Name="TxtSldNvidiaFramerate"
                                           Grid.Row="1"
