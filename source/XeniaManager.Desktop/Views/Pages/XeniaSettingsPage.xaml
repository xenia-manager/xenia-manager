<Page x:Class="XeniaManager.Desktop.Views.Pages.XeniaSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:XeniaManager.Desktop.Converters"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="810"
      Title="XeniaSettingsPage"
      Loaded="XeniaSettingsPage_Loaded">
    <Page.Resources>
        <converters:FrameRateToTextConverter x:Key="FrameRateToTextConverter" />
        <converters:DivideByThousandConverter x:Key="DivideByThousandConverter" />
        <Style x:Key="FlatMenuItemStyle" TargetType="MenuItem">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <ContentPresenter ContentSource="Header" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="CmbConfigurationFiles" Grid.Column="0"
                      FontSize="16"
                      HorizontalAlignment="Stretch"
                      MinWidth="500"
                      Margin="10,0"
                      ItemsSource="{Binding ConfigurationFiles}"
                      SelectionChanged="CmbConfigurationFiles_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" HorizontalAlignment="Center" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Menu Grid.Column="1"
                  HorizontalAlignment="Stretch"
                  Margin="10,0">
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnResetSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="ArrowClockwise24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOptimizeSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="CloudSync24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOpenInEditor"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Pen24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnSaveSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center"
                                Click="BtnSaveSettings_Click">
                            <ui:SymbolIcon Symbol="Save24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>

        <Border Grid.Row="1"
                Background="{DynamicResource TextFillColorSecondaryBrush}"
                Height="1" />

        <Menu Grid.Row="2"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Margin="5">
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnAudioSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="SpeakerEdit24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnDisplaySettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Desktop24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplaySettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnGraphicalSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DrawImage24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_GraphicalSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnGeneralSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Globe24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_GeneralSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnUserInputSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Cursor24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_UserInputSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnStorageSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Storage24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_StorageSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnHackSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_HackSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <StackPanel x:Name="SpSettingsPanel"
                    Grid.Row="3"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
            <StackPanel x:Name="SpAudioSettings">
                <!-- apu -->
                <Border x:Name="BrdAudioSystemSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioSystemSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioSystemSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ComboBox Grid.Column="1"
                                  x:Name="CmbAudioSystem"
                                  Cursor="Hand"
                                  FontSize="18"
                                  Margin="0,10"
                                  HorizontalAlignment="Center"
                                  MinWidth="120"
                                  ItemsSource="{Binding AudioSystems}"
                                  DisplayMemberPath="Key"
                                  SelectedValuePath="Value" />
                    </Grid>
                </Border>

                <!-- apu_max_queued_frames -->
                <Border x:Name="BrdAudioMaxQueuedFramesSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioMaxQueuedFramesSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioMaxQueuedFramesSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtAudioMaxQueuedFrames"
                                 Grid.Column="1"
                                 FontSize="18"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="0,10"
                                 Width="130"
                                 TextChanged="TxtAudioMaxQueuedFrames_TextChanged" />
                    </Grid>
                </Border>

                <!-- mute -->
                <Border x:Name="BrdAudioMuteSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioMuteSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioMuteSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkAudioMute"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- enable_xmp -->
                <Border x:Name="BrdEnableXmpSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmpSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioXmpSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXmp"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45"
                                  Click="ChkXmp_Click" />
                    </Grid>
                </Border>

                <!-- xmp_default_volume -->
                <Border x:Name="BrdXmpVolumeSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmpVolumeSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioXmpVolumeSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Grid Grid.Column="1"
                              Margin="0"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Slider x:Name="SldXmpVolume"
                                    Grid.Row="0"
                                    Minimum="0" Maximum="100"
                                    IsSnapToTickEnabled="True" TickFrequency="1"
                                    Width="240"
                                    ValueChanged="SldXmpVolume_ValueChanged" />
                            <TextBlock x:Name="TxtSldXmpVolume"
                                       Grid.Row="1"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Text="0" />
                        </Grid>
                    </Grid>
                </Border>

                <!-- use_dedicated_xma_thread -->
                <Border x:Name="BrdAudioDedicatedXmaThreadSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioUseDedicatedXmaThreadSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioUseDedicatedXmaThreadSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkDedicatedXmaThread"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- use_new_decoder -->
                <Border x:Name="BrdAudioXmaDecoderSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmaDecoderSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_AudioXmaDecoderSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXmaAudioDecoder"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel x:Name="SpDisplaySettings">
                <!-- fullscreen -->
                <Border x:Name="BrdDisplayFullscreenSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayFullscreenSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayFullscreenSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkFullscreen"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- internal_display_resolution -->
                <Border x:Name="BrdInternalDisplayResolutionSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayInternalResolutionSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayInternalResolutionSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ComboBox Grid.Column="1"
                                  x:Name="CmbInternalDisplayResolution"
                                  Cursor="Hand"
                                  FontSize="18"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  MinWidth="150"
                                  ItemsSource="{Binding InternalDisplayResolutions}"
                                  SelectionChanged="CmbInternalDisplayResolution_OnSelectionChanged" />
                    </Grid>
                </Border>

                <!-- internal_display_resolution_x -->
                <Border x:Name="BrdCustomInternalDisplayResolutionWidthSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionWidthSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionWidthSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtCustomInternalDisplayResolutionWidth"
                                 Grid.Column="1"
                                 FontSize="18"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="0,10"
                                 Width="130" />
                    </Grid>
                </Border>

                <!-- internal_display_resolution_y -->
                <Border x:Name="BrdCustomInternalDisplayResolutionHeightSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionHeightSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayCustomInternalResolutionHeightSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtCustomInternalDisplayResolutionHeight"
                                 Grid.Column="1"
                                 FontSize="18"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="0,10"
                                 Width="130" />
                    </Grid>
                </Border>

                <!-- present_letterbox -->
                <Border x:Name="BrdDisplayLetterboxSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayLetterboxSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayLetterboxSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkLetterbox"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- widescreen -->
                <Border x:Name="BrdDisplayWidescreenSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayWidescreenSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayWidescreenSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkWidescreen"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- vsync -->
                <Border x:Name="BrdXeniaVerticalSyncSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayVSyncSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayVSyncSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXeniaVSync"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- framerate_limit -->
                <Border x:Name="BrdXeniaFramerateLimitSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_DisplayFramerateLimitSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock TextAlignment="Center"
                                           Text="{DynamicResource XeniaSettingsPage_DisplayFramerateLimitSettingTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Grid Grid.Column="1"
                              Margin="0"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Slider x:Name="SldXeniaFramerate"
                                    Grid.Row="0"
                                    Minimum="0" Maximum="144"
                                    IsSnapToTickEnabled="True" TickFrequency="1"
                                    Width="240" />
                            <TextBlock x:Name="TxtSldXeniaFramerate"
                                       Grid.Row="1"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Text="{Binding Value,ElementName=SldXeniaFramerate,Converter={StaticResource FrameRateToTextConverter}}" />
                        </Grid>
                    </Grid>
                </Border>

                <!-- TODO: NVIDIA/AMD Settings here-->
            </StackPanel>

            <StackPanel x:Name="SpGraphicalSettings">
                <!-- gpu -->
                <Border x:Name="BrdGraphicsApiSetting"
                        Height="70"
                        MaxWidth="810"
                        Style="{DynamicResource SettingBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Style="{DynamicResource SettingTextBlock}"
                                   Text="{DynamicResource XeniaSettingsPage_GraphicsGpuApiSettingText}" />
                        <ComboBox Grid.Column="1"
                                  x:Name="CmbGpuApi"
                                  Cursor="Hand"
                                  FontSize="18"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  MinWidth="110"
                                  ItemsSource="{Binding GraphicsApis}"
                                  SelectionChanged="CmbGpuApi_SelectionChanged"
                                  DisplayMemberPath="Key"
                                  SelectedValuePath="Value" />
                    </Grid>
                </Border>

                <!-- D3D12 Settings -->
                <StackPanel x:Name="SpD3D12Settings">
                    <!-- d3d12_allow_variable_refresh_rate_and_tearing -->
                    <Border x:Name="BrdD3D12AllowVariableRefreshRateTearingSetting"
                            Height="70"
                            MaxWidth="810"
                            Style="{DynamicResource SettingBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Style="{DynamicResource SettingTextBlock}"
                                       Text="{DynamicResource XeniaSettingsPage_GraphicsD3D12VRRSettingText}">
                                <TextBlock.ToolTip>
                                    <TextBlock TextAlignment="Center"
                                               Text="{DynamicResource XeniaSettingsPage_GraphicsD3D12VRRSettingTooltip}" />
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <CheckBox x:Name="ChkD3D12VariableRefreshRate"
                                      Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      Margin="0,10"
                                      Width="45" />
                        </Grid>
                    </Border>

                    <!-- render_target_path_d3d12 -->
                    <Border x:Name="BrdD3D12RenderTargetPathSetting"
                            Height="70"
                            MaxWidth="810"
                            Style="{DynamicResource SettingBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
