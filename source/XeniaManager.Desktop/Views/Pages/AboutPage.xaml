<Page x:Class="XeniaManager.Desktop.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">
    <ui:DynamicScrollViewer Padding="20">
        <StackPanel>
            <!-- Application Info Section -->
            <ui:Card MaxWidth="820" Padding="24">
                <StackPanel>
                    <!-- App Title and Version -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Xenia Manager"
                                   FontSize="28"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ApplicationVersion}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- App Description -->
                    <TextBlock Text="{DynamicResource AboutPage_AppDescription}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="14"
                               MaxWidth="600"
                               Margin="0,0,0,20" />

                    <!-- Action Buttons -->
                    <UniformGrid Rows="1"
                                 Columns="3"
                                 Margin="0,12,0,0"
                                 HorizontalAlignment="Center">
                        <ui:Button x:Name="BtnWebsite"
                                   Appearance="Primary"
                                   Style="{DynamicResource ManageXeniaButton}"
                                   Content="{DynamicResource AboutPage_WebsiteButtonText}"
                                   Click="BtnWebsite_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Globe24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button x:Name="BtnGitHub"
                                   Appearance="Secondary"
                                   Style="{DynamicResource ManageXeniaButton}"
                                   Content="{DynamicResource AboutPage_GithubButtonText}"
                                   Click="BtnGitHub_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Open24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button x:Name="BtnCheckUpdates"
                                   Appearance="Info"
                                   Style="{DynamicResource ManageXeniaButton}"
                                   Content="{DynamicResource AboutPage_CheckForUpdatesButtonText}"
                                   Click="BtnCheckUpdates_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowSync24" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </UniformGrid>
                </StackPanel>
            </ui:Card>

            <!-- License & Credits -->
            <ui:Card MaxWidth="820" Padding="24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Grid.Column="0"
                                       Symbol="Document24"
                                       FontSize="24"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource AboutPage_LicenseCreditsText}"
                                       FontSize="18"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="{DynamicResource AboutPage_LicenseCreditsSideText}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       FontSize="12" />
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="{DynamicResource AboutPage_LicenseText}"
                                   FontSize="14"
                                   Margin="0,4,0,8" />

                        <TextBlock Text="Third-party libraries and acknowledgments:"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,8,0,4" />

                        <TextBlock FontSize="14" Margin="0,4,0,0">
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://xenia.jp/" RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Project" />
                            </Hyperlink>
                            <Run Text=", " />
                            <Hyperlink NavigateUri="https://github.com/xenia-canary/xenia-canary"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Canary" />
                            </Hyperlink>
                            <Run Text=", " />
                            <Hyperlink NavigateUri="https://github.com/AdrianCassar/xenia-canary"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Netplay" />
                            </Hyperlink>
                            <Run Text=", " />
                            <Hyperlink NavigateUri="https://github.com/marinesciencedude/xenia-canary-mousehook"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Mousehook" />
                            </Hyperlink>
                            <Run Text=" - Xbox 360 emulator" />
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/Team-Resurgent/Xbox360Toolkit"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Team Resurgent" />
                            </Hyperlink>
                            <Run Text=" - Xbox 360 Toolkit"/>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/lepoco/wpfui"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="WPF UI" />
                            </Hyperlink>
                            <Run Text=" - Modern WPF controls" />
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/dlemstra/Magick.NET"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Magick.NET" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://serilog.net/"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Serilog" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/xoofx/Tomlyn"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Tomlyn" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• Community contributors and testers" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ui:DynamicScrollViewer>
</Page>