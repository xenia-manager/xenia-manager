<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:XeniaManager.Controls.Cards">
    <Style Selector="local|ComboBoxCard">
        <Setter Property="Template">
            <ControlTemplate TargetType="local:ComboBoxCard">
                <local:CustomCard Tooltip="{TemplateBinding Tooltip}">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Header -->
                        <local:CardHeader Grid.Column="0"
                                          Grid.ColumnSpan="2"
                                          Title="{TemplateBinding Title}"
                                          Description="{TemplateBinding Description}"
                                          Icon="{TemplateBinding Icon}"
                                          ShowIconBackground="{TemplateBinding ShowIconBackground}" />
                        <!-- ComboBox -->
                        <ComboBox Grid.Column="2"
                                  MinWidth="160"
                                  VerticalAlignment="Center"
                                  ItemsSource="{TemplateBinding Items}"
                                  SelectedItem="{Binding SelectedItem,
                                                 RelativeSource={RelativeSource TemplatedParent},
                                                 Mode=TwoWay}"
                                  SelectedIndex="{Binding SelectedIndex,
                                                  RelativeSource={RelativeSource TemplatedParent},
                                                  Mode=TwoWay}" />
                    </Grid>
                </local:CustomCard>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>